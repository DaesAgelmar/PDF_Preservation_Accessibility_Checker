{
  "//_description": "Sistemin çalışma zamanı davranışını, performansını ve hata yönetimini kontrol eden teknik ayarlar. Geliştiriciler içindir.",
  "performance_settings": {
    "batch_size_for_processing": 100,
    "enable_progress_logging": true,
    "log_every_n_articles": 50,
    "max_memory_usage_mb": 2048,
    "enable_parallel_processing": false,
    "max_workers": 4
  },
  "error_handling": {
    "continue_on_parse_errors": true,
    "max_parse_errors_before_abort": 100,
    "skip_corrupted_xml_files": true,
    "log_all_processing_warnings": true,
    "create_error_summary_report": true,
    "retry_failed_analyses": false
  },
  "quality_assurance": {
    "validate_xml_structure": true,
    "check_rule_mapping_completeness": true,
    "warn_on_unmapped_rules": true,
    "track_processing_errors": true,
    "validate_iso_references": true,
    "minimum_articles_per_journal": 1
  },
  "localization": {
    "default_language": "en",
    "supported_languages": ["en", "tr", "de", "fr", "es"],
    "date_format": "YYYY-MM-DD",
    "timezone": "UTC"
  }
}